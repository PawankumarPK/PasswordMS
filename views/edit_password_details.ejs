<%- include('header')%>

<div class="container">
    <div class="row">
        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default" style="border-color: #720D5D;">
                <div class="panel-heading" style="background-color: #720D5D;">
                    <div class="panel-title" style="color: white;">Edit Password Details</div>
                </div>
                <div class="panel-body">
                    <form action="/password_details/edit/<%= record._id%>" id="passwordform" class="form-horizontal"
                        method="post" role="form">

                        <% if(success != ""){%>
                        <p style="text-align: center;color: green;"><%= success %></p>
                        <%}%>
                        
                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Password Category</label>
                                <div class="col-md-9">
                                    <select class="form-control" name="pass_cat" style="border-color: #720D5D;" >
                                        <option value="">Choose Password Category</option>

                                        <% if(records.length > 0){
                                            records.forEach(function(row){%>
                        <option value="<%= row.password_category %>"
                            <% if(row.password_category == record.password_category){%>
                            selected<%}%>><%= row.password_category %></option>
                            <%})}%>

                            </select>
                </div>
            </div>

            <div class="form-group">
                <label for="username" class="col-md-3 control-label">Project Name</label>
                <div class="col-md-9">
                    <input type="textbox" class="form-control" value="<%= record.project_name %>" name="project_name"
                        placeholder="Enter Project Name">
                </div>
            </div>


            <div class="form-group">
                <label for="username" class="col-md-3 control-label">Password Details</label>
                <div class="col-md-9">
                    <textarea type="text" id="editor" class="form-control" name="pass_details" rows="5"
                        placeholder="Enter Password Details"><%= record.password_detail%></textarea>
                </div>
            </div>

            <input type="hidden" name="id" value="<%= record._id%>">

            <div class="form-group">
                <!-- Button -->
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" name="submit" value="Edit Details" class="btn" style="background-color: #5D1049; color: white;">
                </div>
            </div>

            <p><a href="/view-all-password">View All Password List</a></p>

            </form>
        </div>
    </div>
</div>
</div>
</div>

<script>
    CKEDITOR.replace("editor")
</script>

<%- include("footer")%>