<%- include('header')%>

<div class="container">
    <div class="row">
        <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default" style="border-color: #720D5D;">
                <div class="panel-heading" style="background-color: #720D5D;">
                    <div class="panel-title" style="color: white;">Edit Password Category</div>
                </div>
                <div class="panel-body">
                    <form action="/passwordCategory/edit/" id="EmployeeForm" class="form-horizontal" method="post"
                        role="form">
                        <input type="hidden" name="id" value="<%= id %>">

                        <% if(errors != ""){%>
                        <p style="text-align: center;color: red"><%= errors.passwordCategory.msg %></p>
                        <%}%>

                    <% if(success != ""){%>
                        <p style="text-align: center;color: green"><%= success %></p>
                        <%}%>
    
                            <div class="form-group">
                                <label for="username" class="col-md-3 control-label">Category Name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="passwordCategory" value="<%= records.password_category%>"
                        placeholder="Enter Password Category Name">
                </div>
            </div>

            <div class="form-group">
                <!-- Button -->
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" name="submit" value="Update Category" class="btn" style="color:white;background-color: #5D1049;">
                </div>
            </div>

            <p><a href="/passwordCategory">View All Category List</a></p>

            </form>
        </div>
    </div>
</div>
</div>
</div>

<%- include("footer")%>